@using SocialNetwork.Domain.Models
@model IEnumerable<SocialNetwork.Domain.Models.FriendEntity>

@{
    ViewBag.Title = "Friends";
}

<h2>Friends</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(p => p.User)
        </th>
        <th>
            @Html.DisplayNameFor(p => p.Friend)
        </th>
        <th></th>
    </tr>

    @foreach (var p in @Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(pr => p.User)
            </td>
            <td>
                @Html.DisplayFor(pr => p.Friend)
            </td>
        </tr>
    }
</table>

